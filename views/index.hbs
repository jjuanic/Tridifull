<h1>{{title}}</h1>
<p>{{title}} is a platform where you can have a list of your favorite albums</p>

{{#if notificacion}}
<h1>{{notificacion}}</h1>
{{/if}}

{{#if popularAlbums}}
    <h2>Popular Albums</h2>
    <div class="row">
        {{#each popularAlbums}}
            <div class="col-md-2 mb-4 pr-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <img src="{{changeImageUrl artworkUrl100}}" alt="Album Art" class="card-img-top">
                        <div>
                            <h5 class="card-title">{{truncateText collectionName 30}}</h5>
                            <p class="card-text">{{truncateText artistName 30}}</p>
                            <p class="card-text">Genre: {{primaryGenreName}}</p>
                            <p class="card-text">Price: {{collectionPrice}}</p>
                        </div>
                        <form action="/" method="post">
                            <input type="hidden" name="albumId" value="{{../collectionId}}">
                            <input type="hidden" name="collectionName" value="{{../collectionName}}">
                            <input type="hidden" name="artworkUrl1000" value="{{../artworkUrl100}}">
                            <input type="hidden" name="artistName" value="{{../artistName}}">
                            <input type="hidden" name="collectionPrice" value="{{../collectionPrice}}">
                            <input type="hidden" name="primaryGenreName" value="{{../primaryGenreName}}">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-heart"></i> Me gusta</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>No popular albums found</p>
{{/if}}