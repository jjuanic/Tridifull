    {{#if popularAlbums}}
    <h2>Popular Albums</h2>
    <div class="row">
        {{#each popularAlbums}}
        <div class="col-md-2 mb-4 pr-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <img src="{{changeImageUrl this.artworkUrl100}}" alt="Album Art" class="card-img-top">
                    <div>
                        <h5 class="card-title">{{truncateText this.collectionName 30}}</h5>
                        <p class="card-text">{{truncateText this.artistName 30}}</p>
                        <p class="card-text">Genre: {{this.primaryGenreName}}</p>
                        <p class="card-text">Price: {{this.collectionPrice}}</p>
                    </div>
                    <form action="/" method="post">
                        <input type="hidden" name="albumId" value="{{this.albumId}}">
                        <input type="hidden" name="collectionName" value="{{truncateText this.collectionName 30}}">
                        <input type="hidden" name="artworkUrl1000" value="{{truncateText this.artistName 30}}">
                        <input type="hidden" name="artistName" value="{{this.artistName}}">
                        <input type="hidden" name="collectionPrice" value="{{this.collectionPrice}}">
                        <input type="hidden" name="primaryGenreName" value="{{this.primaryGenreName}}">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-heart"></i> Me gusta</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>No popular albums found</p>
    {{/if}}